rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get organizer ID from event
    function getEventOrganizerId(eventId) {
      return get(/databases/$(database)/documents/events/$(eventId)).data.organizerId;
    }
    
    // Helper function to check if user is organizer of an event
    function isOrganizer(eventId) {
      return isAuthenticated() && 
             request.auth.uid == getEventOrganizerId(eventId);
    }
    
    // Helper function to get participant email from request
    function getParticipantEmail() {
      return request.resource.data.email;
    }
    
    // Helper function to check if participant email matches request email
    function isParticipantEmail(email) {
      return email != null && 
             email.toLowerCase() == request.auth.token.email?.toLowerCase();
    }
    
    // Users collection: users can read/write their own document
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Events collection
    match /events/{eventId} {
      // Public read access for event pages (by code)
      allow read: if true;
      
      // Only authenticated users can create events
      allow create: if isAuthenticated() && 
                       request.resource.data.organizerId == request.auth.uid;
      
      // Only organizer can update/delete their own events
      allow update, delete: if isOrganizer(eventId);
      
      // Participants subcollection (stored as array in event document, but rules apply to document)
      // Participants can only read their own data via email matching
      // This is handled at the application level since participants are stored as an array
      // The event document read rule above allows reading, but we'll filter in the app
      
      // Assignments subcollection
      match /assignments/{assignmentId} {
        // Organizer can read all assignments
        allow read: if isOrganizer(eventId);
        
        // Participants can only read their own assignment (where they are the giver)
        // This requires checking the assignment data
        allow read: if isAuthenticated() && 
                       resource.data.giverId != null &&
                       // Note: We can't directly query by email here, so we allow read
                       // and filter in the application layer
                       true;
        
        // Only organizer can create/update/delete assignments
        allow write: if isOrganizer(eventId);
      }
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
